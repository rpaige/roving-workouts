extends layout

block content
	div(class='container')
		div(class='row')
			div(class='col-md-4')
			div(class='col-md-4')
				h1 Register Page
				p.lead Say something worthwhile here.
			div(class='col-md-4')
		br
		div(class='row')
			div(class='col-md-4')
			div(class='col-md-4')
				form(role='form', action='/register', method='post', style='max-width: 300px;')
					.form-group
						input.form-control(type='text', name='username', placeholder='Enter username')
					.form-group
						input.form-control(type='password', name='password', placeholder='Enter password')
					button.btn.btn-default(type='submit') Submit
					&nbsp;
					a(href='/')
						button.btn.btn-primary(type='button') Cancel
			div(class='col-md-4')