extends layout

block content
	div(class='container')
		div(class='row')
			div(class='col-md-4')
			div(class='col-md-4')
				h1 Login Page
				p.lead Say something worthwhile here.
		br
		div(class='row')
			div(class='col-md-4')
			div(class='col-md-4')
				form(role='form', action='/login', method='post', style='max-width: 300px;')
					.form-group
						input.form-control(type='text', name='username', placeholder='Enter your username')
					.form-group
						input.form-control(type='password', name='password', placeholder='Enter your password')
					button.btn.btn-default(type='submit', class='loginBtns') Submit
					&nbsp;
					a(href='/')
						button.btn.btn-primary(type='button', class='loginBtns') Cancel
			div(class='col-md-4')